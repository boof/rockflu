	<tr class="<%= cycle('even', 'odd') %>">
		<td><%= image_tag('folder.png') %></td>
		<td><%= link_to h(folder.name), folder_path(folder) %></td>
		<td>--</td>
		<td><%= folder.date_modified %></td>
		<td>
			<% if @can_update %>
			<%= link_to image_tag('edit.png'), edit_folder_path(folder), :title => 'Rename this folder' %>
			<% end %>
		</td>
		<td>
			<% if @can_delete %>
			<%= link_to image_tag('delete.png'), folder_path(folder), :method => :delete, :title => 'Delete this folder', :confirm => "All files and subfolders will be deleted!\nAre you sure?" %>
			<% end %>
		</td>
		<td></td>
	</tr>
