<tr class="<%= cycle('even', 'odd') %>">
	<td><%= image_tag('folder.png') %></td>
	<td><%= link_to h(folder.name), folder_path(folder) %></td>
	<td><%= folder.size %></td>
	<td class="time"><%= folder.updated_at.iso8601 %></td>
	<td>
		<% if @can_update %>
		<%= link_to image_tag('edit.png'), edit_folder_path(folder), :title => 'Rename this folder', :class => 'noBackground' %>
		<% end %>
	</td>
	<td>
		<% if @can_delete %>
		<%= link_to image_tag('delete.png'), folder_path(folder), :method => :delete, :title => 'Delete this folder', :confirm => "Are you sure?", :class => 'noBackground' %>
		<% end %>
	</td>
	<td></td>
</tr>
