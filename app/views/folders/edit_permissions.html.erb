<% if current.user.immortal? %>
<div id="folder_rights"><div>
	<% form_tag update_permissions_folder_path(current.folder), :method => :put do %>
	<table>
		<tr>
			<th></th>
			<th></th>
			<th class="rights">Create</th>
			<th class="rights">Read</th>
			<th class="rights">Update</th>
			<th class="rights">Delete</th>
		</tr>
		<% @groups.each do |grp| %>
		<% perms = @permissions.fetch grp.id, @no_permission %>
		<tr class="<%= cycle('even', 'odd') %>">
			<td><%= image_tag('group.png') %></td>
			<td><%= h(grp.name) %></td>
			<td class="rights">
				<%= check_box 'create_check_box', grp.id,
					:checked => perms.can_create?,
					:onclick => "CheckRead(this.checked, #{ grp.id })" %>
			</td>
			<td class="rights">
				<%= check_box 'read_check_box', grp.id,
					:checked => perms.can_read?,
					:onclick => "UncheckCreateUpdateDelete(this.checked, #{ grp.id })" %>
			</td>
			<td class="rights">
				<%= check_box 'update_check_box', grp.id,
					:checked => perms.can_update?,
					:onclick => "CheckRead(this.checked, #{ grp.id })" %>
			</td>
			<td class="rights">
				<%= check_box 'delete_check_box', grp.id,
					:checked => perms.can_delete?,
					:onclick => "CheckRead(this.checked, #{ grp.id })" %>
			</td>
		</tr>
		<% end %>
	</table>
	<div>
		<%= check_box 'update_recursively', 'checked', {}, 'yes', 'no' %> Apply changes to subfolders
	</div>
	<br / >
	<%= submit_tag 'Save' %>
	<%= link_to 'Back', folder_path(folder_id) %>
	<% end %>
</div></div>
<% end %>