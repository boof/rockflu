<p class="title">Rename file</p>

<% form_tag :action => :update, :id => @file do %>
<%= myfile_to_file(error_messages_for('myfile')) %>
<label for="myfile_filename">Name:</label><br />
<%= text_field 'myfile', 'filename'  %><br />
<br />
<%= submit_tag 'Rename' %>
<% end %>

<%= link_to 'Back', folder_path(current.folder) %>